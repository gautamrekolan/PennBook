<td class="sidebar">
  <strong>Name</strong> <%= @title %><br />
  <strong><%= link_to 'Posts ', @user %></strong> <%= @user.posts.count %> <br/>
  <strong><%= link_to 'Likes ', user_path(@user) + '/likes' %></strong> <%= @user.likes.count %>
  <%= render 'shared/stats' %>
  <% if current_user?(@user) %>
    <%= link_to 'Visualize Network', "/visualize" %>
  <% end %>

  <strong>Followers Online</strong>
  <div>
    <% unless @users.empty? %>
      <% @users.each do |user| %>
        <%= link_to gravatar_for(user, :size => 30), user %>
      <% end%>
    <% end %>
  </div>

</td>
