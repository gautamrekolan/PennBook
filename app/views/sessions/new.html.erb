<h3>Sign in</h3>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :placeholder => "Email" %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :placeholder => "Password" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", :class =>"btn primary" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
