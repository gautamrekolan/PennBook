<tr>
  <td class="post">
    <div class="thumb"><%= gravatar_for post.user, :size => 40 %></div>
    <span class="user"><%= link_to post.user.first_name + " " + post.user.last_name, post.user %></span>
    <span class="content"><%= post.content %></span>
    <% if session[:user_id] == post.user_id %>
      <span style="float: right;"><%= link_to "Delete", [@user, post], :method => :delete %></span>
    <% end %>
    <span class="timestamp" style="float: right; color: #999;">
      Posted <%= time_ago_in_words(post.created_at) %> ago
    </span>
  </td>
</tr>