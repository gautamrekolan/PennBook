<h1><%= @user.first_name + " " + @user.last_name %>'s posts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Posted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= time_ago_in_words(post.created_at) %> ago </td>
    <td><%= link_to 'Show', user_post_path(@user, post) %></td>
    <td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td>
    <td><%= link_to 'Destroy', user_post_path(@user, post), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_user_post_path(@user) %>
